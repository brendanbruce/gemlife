%main.main-container
  .full-width-container
    %section.sidebar
      %h3
        Days
      %ul.sidebar__list
        - days_list.each do |day|
          %li
            = link_to day.strftime("%A"), find_by: day
    %section.sidebar-main
      %header
        %h1 Events

      %section
        - if @events.length > 0
          - @events.each do |event|
            = render partial: "event", locals: { event: event }
        - else
          %h1
            No events today :(
