%main
  = @profile.follows.count
  - @profile.follows.each do |follow|
    - if follow.followable_type == "Profile"
      = follow.name

  = render partial: "profile", locals: { profile: @profile }
  = render partial: "stats", locals: { profile: @profile }

  .main-container.outer-container
    %h3
      Upcoming events for #{ @profile.name }
    - @profile.events.each do |event|
      = render partial: "events/event", locals: { event: event }
