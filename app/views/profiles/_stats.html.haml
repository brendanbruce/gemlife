.profile__stat__row
  .outer-container
    .profile__stat
      = link_to controller: "profiles", action: "followers" do
        %h5 Followers
        %h3
          = profile.followers.count
    .profile__stat
      = link_to controller: "profiles", action: "followers" do
        %h5 Following
        %h3
          = profile.follows.count
    .profile__stat
      = link_to profile_gigs_path(profile) do
        %h5 Gigs
        %h3
          = profile.gigs.count
    .profile__stat
      %h5 Member Since
      %h3
        = member_since_date(profile.user.created_at)

