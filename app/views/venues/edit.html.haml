= form_for @venue do |f|
  - if @venue.errors.any?
    .form-errors
      %h3.form-error__header
        = "#{pluralize(@venue.errors.count, "error")} prohibited this event from being saved:"
      %ul
        = @venue.errors.full_messages.each do |msg|
          %li
            = msg

  %h2
    Main Info
  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :street_address
    = f.text_field :street_address

  .field
    = f.label :city
    = f.text_field :city

  .field
    = f.label :state
    = f.text_field :state

  .field
    = f.label :zip_code
    = f.text_field :zip_code

  %h2
    Optional Info
  .field
    = f.label :description
    = f.text_area :description

  .field
    = f.label :phone
    = f.text_field :phone

  .field
    = f.label :twitter_url
    = f.text_field :twitter_url

  .field
    = f.label :facebook_url
    = f.text_field :facebook_url

  .field
    = f.label :website_url
    = f.text_field :website_url

  .actions
    = f.submit "Add Venue"

